<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Dashboard</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="font/bootstrap-icons.css">

    <!-- Custom styles for this template -->
    <link href="/stylesheets/portal.css" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
      <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Banking Inc.</a>
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          <a class="nav-link" href="http://localhost:3000/logout">Sign out</a>
        </li>
      </ul>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">

            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
              <span>Admin Permissions</span>
            </h6>
            <ul class="nav flex-column mb-2">
              <li class="nav-item">
                <a class="nav-link active" href="#">
                  <span data-feather="search"></span>
                  Modify Client <span class="sr-only">(current)</span>
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Modify Clients</h1>
          </div>
          
          <% for(var i = 0; i < locals.allCustomerEmails.length; i++) { %>
            <div class="container">
              <div class="my-3 p-3 bg-white rounded box-shadow border">
                <div class="row">
                  <div class="col-4 m-auto"><%- locals.allCustomerEmails[i].email %></div>
                  <div class="col m-auto">Customer</div>
                  <div class="col m-auto">
                    <form method="post">
                      <button class="btn btn-success p-auto m-auto" type="submit">Promote</button>
                      <input type="hidden" name="email" value="<%-locals.allCustomerEmails[i].email%>" >
                      <input type="hidden" name="action" value="Promote">
                    </form>
                  </div>
                  <div class="col m-auto">
                    <div class="form-floating">
                      <form method="post">
                      <input type="password" class="form-control" id="<%- locals.allCustomerEmails[i].email %>'s_new_password" name="newPassword" placeholder="Password">
                      <label for="newPassword">New Password</label>
                    </div>
                  </div>
                  <div class="col m-auto">
                      <button class="btn btn-danger p-auto m-auto" type="submit">Reset Password</button>
                      <input type="hidden" name="email" value="<%- locals.allCustomerEmails[i].email %>">
                      <input type="hidden" name="action" value="ResetPassword">
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
          
          <% for(var i = 0; i < locals.allEmployeeEmails.length; i++) { %>
          <div class="container">
            <div class="my-3 p-3 bg-white rounded box-shadow border">
              <div class="row">
                <div class="col-4 m-auto"><%- locals.allEmployeeEmails[i].email %></div>
                <div class="col m-auto">Employee</div>
                <div class="col m-auto">
                  <form method="post">
                    <button type="submit" class="btn btn-success p-auto m-auto" type="submit">Promote</button>
                    <input type="hidden" name="email" value="<%- locals.allEmployeeEmails[i].email %>" >
                    <input type="hidden" name="action" value="Promote">
                  </form>
                </div>
                <div class="col m-auto">
                  <form method="post">
                    <button type="submit" class="btn btn-warning p-auto m-auto" type="submit">Demote</button>
                    <input type="hidden" name="email" value="<%- locals.allEmployeeEmails[i].email %>" >
                    <input type="hidden" name="action" value="Demote">
                  </form>
                </div>
                <div class="col m-auto">
                  <div class="form-floating">
                    <form method="post">
                    <input type="password" class="form-control" id="<%- locals.allEmployeeEmails[i].email %>'s_new_password" placeholder="Password">
                    <label for="newPassword">New Password</label>
                    <input type="hidden" name="email" value="<%- locals.allEmployeeEmails[i].email %>">
                    <input type="hidden" name="action" value="ResetPassword">
                  </div>
                </div>
                <div class="col m-auto">
                    <button type="submit" class="btn btn-danger p-auto m-auto" type="submit">Reset Password</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% } %>

        </form>

        </main>
      </div>
    </div>

    <!-- Icons -->
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script>
      feather.replace()
    </script>

  </body>
</html>
